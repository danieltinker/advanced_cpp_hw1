  "configurations": [
    {
      "name": "Debug in WSL",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/main.cpp",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
